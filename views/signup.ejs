<div class="container d-flex justify-content-center align-items-center " style="height: 100vh;">
  <div class="row p-2 shadow bg-white rounded" style="width: 40%;">
    <form  action="/user/signup/createUser"  enctype="multipart/form-data" method="POST" id="signupForm">

      <h2 class="text-center mb-4">SignUp</h2>

      <div class="mb-3">
        <input type="text" class="form-control"  placeholder="Your name" id="userName" name="name" required>
      </div>

      <div class="mb-3">
          <div class="row ">
            <div class="col-9" id="emailBox">
              <input type="email" class="form-control"  placeholder="Your email" id="userEmail" name="email" required>
            </div>
            <div class="col" id="otpSendBox">
              <button class="btn btn-outline-success" id="otpSend" type="button">Verify</button>
            </div>
          </div>
      </div>

            <!-- otp -->
      <div class="mb-3 hide" id="otpBox">
          <div class="row d-flex justify-content-center ">
            <div class="col-4">
              <input type="text" class="form-control" id="otpUser" placeholder="Enter OTP" aria-label="otp">
            </div>
            <div class="col-auto ">
              <button class="btn btn-outline-success" id="otpVerify" type="button">Verfiy OTP</button>
            </div>
            <div class="text-center ">
              <span class="otpTimer" id="otpTime"></span>
              <span class="fs-6 fw-lighter text-danger" id="otpMsg">OTP SENT</span>
            </div>
          </div>          
      </div>
<!--  -->

      <div class="mb-3">
        <input type="password" class="form-control" id="exampleFormControlInput1" placeholder="Your password" name="password" required>
      </div>
      <div class="mb-3">
        <input type="password" class="form-control" id="exampleFormControlInput1" placeholder="confirm password" name="confirmPassword" required>
      </div>

      <div class="mb-3 d-flex justify-content-start align-items-center">
        <label for="formFile" class="form-label m-2">Profile Picture</label>
        <input class="form-control" type="file" id="formFile" name="profilePicture" style="width: 100px;">
      </div>
      

      <div class="d-flex justify-content-center ">
        <input type="submit" class="col-md-6 btn btn-dark mb-3 disabled " id="Signupbtn" value="SignUp">
      </div>
  
      <!--  -->

      <div class="d-flex justify-content-center align-items-center flex-column ">
        <small>or signup using</small>
        
        <div class=" d-flex align-content-center g-1 ">
          <a href="/user/auth/google" class="m-2 text-decoration-none "> 
            <img src="/image/google.png" alt="google" class="icons">       
          </a>
          <a href="/user/auth/facebook"  class="m-2 text-decoration-none col-1">
            <img src="/image/facebook.png" alt="facebook" class="icons">       
          </a>
        </div>

      </div>
  
      <div class="mt-2">
        <small>Already have an Account? <a href="/user/signin">SignIn</a></small>
      </div>
    
    </form>

  </div>
</div>

<script type="module"  src="/js/emailVerify.js"></script>
